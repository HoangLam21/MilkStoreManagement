                                                                HorizontalAlignment="Center"
                                                                Text="{Binding TENSP}"
                                                                VerticalAlignment="Center"
                                                                FontFamily="{StaticResource Custom}"
                                                                FontSize="12" TextWrapping="WrapWithOverflow"
                                                            />
                                                        </Grid>
                                                        <Grid Grid.Column="2">
                                                            <TextBlock
                                                                Text="{Binding MANCC}"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"
                                                                FontFamily="{StaticResource Custom}"
                                                                FontSize="12"
                                                            />
                                                        </Grid>
                                                        <Grid Grid.Column="3">
                                                            <TextBlock
                                                                Text="{Binding SLNHAP}"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"
                                                                FontFamily="{StaticResource Custom}"
                                                                FontSize="12"
                                                            />
                                                        </Grid>
                                                        <Grid Grid.Column="4">
                                                            <TextBlock
                                                                Text="{Binding GIANHAP}"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"
                                                                FontFamily="{StaticResource Custom}"
                                                                FontSize="12"
                                                            />
                                                        </Grid>
                                                    </Grid>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="ItemBorder" Property="Background" Value="#FFFFE0"/>
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="ItemBorder" Property="Background" Value="#FFFFE0"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Vertical"/>
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                        </ListView>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="3" >
                    <StackPanel Margin="40,10,40,90" Orientation="Horizontal">
                        <TextBlock
                            FontFamily="{StaticResource Custom}"
                            FontSize="16"
                            Text="TỔNG TIỀN: "
                            FontWeight="Bold"
                            VerticalAlignment="Center"
                            />
                        <TextBox Margin="40,0,0,0"
                            FontSize="16"
                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                            materialDesign:TextFieldAssist.UnderlineBrush="White"
                            FontFamily="{StaticResource Custom}"
                            x:Name="THANHTIEN" IsReadOnly="True"
                            VerticalAlignment="Center" HorizontalAlignment="Center" Width="350" Height="25"
                            >
                            <TextBox.Template>
                                <ControlTemplate TargetType="{x:Type TextBox}">
                                    <Border Background="{TemplateBinding Background}" Width="350">
                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                    </Border>
                                </ControlTemplate>
                            </TextBox.Template>
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                        </Trigger>
                                        <Trigger Property="IsKeyboardFocusWithin" Value="False">
                                            <Setter Property="Background" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </StackPanel>
                    <Button Content="THÊM"
                        Margin="310,75,0,33"
                        Width="160"
                        FontFamily="{StaticResource Custom}"
                        Style="{StaticResource addButton}"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        BorderThickness="0" FontWeight="Bold"
                        x:Name="btnthem" >
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding AddCTPN}" CommandParameter="{Binding ElementName=AddImportwd}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                    <Button Content="XÓA"
                        Margin="90,75,0,33"
                        Width="160"
                        FontFamily="{StaticResource Custom}"
                        Style="{StaticResource addButton}"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        BorderThickness="0" FontWeight="Bold"
                        x:Name="btnxoa">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding Delete}" CommandParameter="{Binding ElementName=AddImportwd}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
    </Border>

</Window>
